<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/smallUserImageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:civ_border_overlay="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/invitedFriendNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Lotfi Elly Beked We Yetfi"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/smallUserImageView"
        app:layout_constraintStart_toEndOf="@+id/smallUserImageView"
        app:layout_constraintTop_toTopOf="@+id/smallUserImageView" />

    <Button
        android:id="@+id/inviteFriendButton"
        android:layout_width="64dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_buttons"
        android:backgroundTint="@color/light_blue"
        android:text="invite"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/invitedFriendNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/invitedFriendNameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>